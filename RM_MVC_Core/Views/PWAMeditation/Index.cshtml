@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meditation tool</title>
    <link rel="manifest" href="/pwa/manifest.json">
    <link rel="stylesheet" href="/pwa/css/site.css">

    <style>
        body
        {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
        }

        .container
        {
            padding: 20px;
            text-align: center;
        }

        .play-button
        {
            background-color: #6200ea;
            border: none;
            border-radius: 50%;
            color: white;
            padding: 20px;
            font-size: 40px;
            cursor: pointer;
            display: flex;
            justify-content: center;
            align-items: center;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

            .play-button:active
            {
                background-color: #3700b3;
            }

        .elapsed-time
        {
            margin-top: 20px;
            font-size: 24px;
        }

        .log-textarea
        {
            margin-top: 20px;
            width: 100%;
            min-width: 300px;
            height: 200px;
        }
    </style>
</head>

<body>
    <div class="container">
        <button class="play-button">
            ▶
        </button>

        <p>Priming: OFF...</p>

        <textarea class="log-textarea" id="logTextarea" readonly></textarea>
    </div>

    <script src="/pwa/js/app.js"></script>
</body>
</html>